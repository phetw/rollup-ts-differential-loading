    "copyfiles": "^2.2.0",
    "rollup": "^2.10.9",
    "rollup-plugin-terser": "^6.1.0",
    "serve": "^11.3.1",
    "typescript": "^3.9.3",
    "watch": "^1.0.2"
  }
}
