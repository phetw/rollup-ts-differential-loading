{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "declarationDir": "dist/types",
      "declaration": true,
      "target": "esnext",
      "module": "esnext",
      "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  